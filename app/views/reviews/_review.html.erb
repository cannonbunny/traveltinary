<div class="reviewText">
    <%= review.comment %>
    <% if user_signed_in? %>
      <% if review.user_id == current_user.id %>
      <div class="reviewButtonSpace">
        <%= link_to "", edit_place_review_path(review.place, review), class: "btn btn-primary glyphicon glyphicon-pencil" %>
        <%= link_to "", place_review_path(review.place, review), method: :delete, data: { confirm: "Really? :("}, class: "btn btn-danger glyphicon glyphicon-trash" %>
      </div>
      <% end %>
    <% end %>
</div>
