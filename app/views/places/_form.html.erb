<%= simple_form_for @place, html: {multipart: true} do |f| %>
  <%= f.file_field :image %>
  <br>
  <%= select_tag(:continent_id, options_for_select(@continents), :prompt => "Select continent") %>
  <%= select_tag(:activity_id, options_for_select(@activities), :prompt => "Select activity") %>
  <hr/>
  <%= f.input :city, label: "Region/City", placeholder: "Example: Vancouver" %>
  <%= f.input :description, label: "Itinerary", placeholder: "Day 1: ... -> ... -> ..."%>
  <%= f.button :submit, "Add me!", class: "btn btn-primary" %>
<% end %>
