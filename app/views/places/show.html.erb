<div class="col-md-offset-1 col-sm-offset-1 col-xs-offset-1">

<div class="row">
  <div class="col-md-4 col-sm-4 showSpace">
    <h2><%= @place.continent.name %></h2>
    <h3><%= @place.activity.activityname %></h3>
    <% if @place.image.url %>
      <%= image_tag @place.image.url, class:"placeImageShow" %>
    <% end %>
    <div class="links buttonSpace">
      <% if user_signed_in? %>
        <% if @place.user_id == current_user.id %>
          <p>
          <%= link_to "", edit_place_path(@place), class: "btn btn-primary glyphicon glyphicon-pencil" %>
          <%= link_to "", place_path(@place), method: :delete, data: { confirm: "Really? :("}, class: "btn btn-danger glyphicon glyphicon-trash" %>
        <% end %>
          <%= link_to "", upvote_place_path(@place), method: :put, class: "btn btn-warning glyphicon glyphicon-thumbs-up" %>
      <% end %>

          Likey: <%= @place.score %>
          </p>

    </div>
  </div>
  <div class="col-md-8 col-sm-8 showTextSpace">

    <h1><%= @place.city %></h1>
    <p><%= @place.description %></p>
    <hr/>

    <div class="reviewSpace">
      <%= render @place.reviews %>
      <br>
      <% if user_signed_in? %>
        <%= render 'reviews/form' %>
      <% end %>
    </div>
  </div>
</div>



</div>
