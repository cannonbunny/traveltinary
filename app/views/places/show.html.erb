<div class="col-md-8 col-md-offset-2">

<div class="row">
  <div class="col-md-5">
    <h2><%= @place.continent.name %></h2>
    <% if @place.image.url %>
      <%= image_tag @place.image.url, class:"placeImageShow" %>
    <% end %>
    <div class="links buttonSpace">
      <% if user_signed_in? %>
        <% if @place.user_id == current_user.id %>
          <h4>
          <%= link_to "edit", edit_place_path(@place), class: "btn btn-primary" %>
          <%= link_to "delete", place_path(@place), method: :delete, data: { confirm: "Really? :("}, class: "btn btn-danger" %>
          <% end %>
          <%= link_to "", upvote_place_path(@place), method: :put, class: "btn btn-warning glyphicon glyphicon-chevron-up" %>
          <%= @place.score %>
          <%= link_to "", downvote_place_path(@place), method: :put, class: "btn btn-warning glyphicon glyphicon-chevron-down" %>
          </h4>


      <% end %>
    </div>
  </div>
  <div class="col-md-7">

    <h2><%= @place.city %></h2>
    <p><%= @place.description %></p>
    <hr/>

    <div class="col-md-10">
      <%= render @place.reviews %>
      <%= link_to "+ Review", new_place_review_path(@place), class: "btn btn-info buttonSpace" %>
    </div>
  </div>
</div>



</div>
