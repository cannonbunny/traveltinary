<% if !params[:continent] %>
  <%= render 'titleImg' %>
<% end %>

<div class="col-md-10 col-md-offset-1">

<h1><%= params[:continent] %></h1>
<% if @place.count == 0 %>
  <h4>Please add the first itinerary</h4>
<% else %>

  <div class="row">
    <% @place.each do |place| %>
      <div class="col-md-3">
        <% if place.image.url %>
          <a href="/places/<%= place.id %>"><%= image_tag place.image.url, class:"placeImage" %></a>
        <% end %>
        <h4><%= link_to place.city, place_path(place) %></h1>
      </div>
    <% end %>
  </div>

<% end %>

</div>
