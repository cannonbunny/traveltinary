<h1><%= params[:continent] %></h1>
<% if @place.count == 0 %>
  <h1>Please add the first itinerary</h1>
<% else %>
  <div class="row">
    <% @place.each do |place| %>
      <div class="col-md-3">
        <% if place.image.url %>
          <a href="/places/<%= place.id %>"><%= image_tag place.image.url, class:"placeImage" %></a>
        <% end %>
        <h1><%= link_to place.city, place_path(place) %></h1>
      </div>

    <% end %>
  </div>

<% end %>
