<% if !params[:continent] && !params[:activity] %>
  <%= render 'titleImg' %>
<div class="col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
  <%= render 'displayPlace' %>
</div>
<% end %>

<div class="col-md-offset-1 col-sm-offset-1 col-xs-offset-1">

<% if params[:continent] && params[:activity]%>
  <h2><%= params[:continent] %></h2>
  <h2><%= params[:activity] %></h2>
  <%= render 'displayPlace' %>
<% else %>
  <% if params[:continent]%>
    <h2><%= params[:continent] %></h2>
    <%= render 'displayPlace' %>
  <% end %>
  <% if params[:activity] %>
    <h2><%= params[:activity] %></h2>
    <%= render 'displayPlace' %>
  <% end %>
<% end %>
</div>
